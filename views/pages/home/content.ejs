<%
   var formatDate = function(date) {
   var days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
   var months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];

   var dateSuffix = 'th';
   if (1 == date.getDate() || 21 == date.getDate())
   dateSuffix = 'st';
   if (2 == date.getDate() || 22 == date.getDate())
   dateSuffix = 'nd';
   if (3 == date.getDate() || 23 == date.getDate())
   dateSuffix = 'rd';

   return days[date.getDay()] + ', ' + months[date.getMonth()] + ' ' + date.getDate() + '<sup>' + dateSuffix + '</sup>, ' + date.getFullYear();
   };
%>

<h2 class="inset content-title"><span class="icon-home"></span>&nbsp;&nbsp;Home</h2>

<!-- Articles -->
<div class="home-article-list">
  <!-- Featured article -->
  <% if ('undefined' !== typeof featuredArticle) { %>
  <div class="featured">
    <div class="grid-12">
      <div class="cell-7 cell-mobile-12">
        <div class="thumbnail">
          <a href="/article/<%= featuredArticle.technicalName %>">
            <!-- Article image -->
            <img src="<%= featuredArticle.img %>" alt="" />
            <!-- !Article image -->
          </a>
        </div>
      </div>
      
      <div class="cell-5 cell-mobile-12">
        <!-- Article title -->
        <div class="title-author">
          <h3 class="title"><a href="/article/<%= featuredArticle.technicalName %>"><%= featuredArticle.title %></a></h3>
          <h4 class="author">by <a href="/user/<%= featuredArticle.author %>"><%= featuredArticle.author %></a>, <%- formatDate(featuredArticle.lastUpdated) %></h4>
        </div>
        <!-- !Article title -->

        <!-- Article tags -->
        <div class="inset tags">
          <ul class="unstyled flat">
            <li class="tag-group"><a href="/search/<%= featuredArticle.tags.join('%20') %>"><span class="icon-tags hidden-hover"></span></a></li>
            <% for (var i = 0 ; featuredArticle.tags.length > i ; ++i) { %>
            <li class="tag"><a href="/search/<%= featuredArticle.tags[i] %>"><span class="icon-tag"></span>&nbsp;&nbsp;<%= featuredArticle.tags[i] %></a></li>
            <% if (featuredArticle.tags.length != i + 1) { %>
            <li></li>
            <% } %>
            <% } %>
          </ul>
        </div>
        <!-- !Article tags -->

        <!-- Article caption -->
        <div class="caption">
          <i><%= featuredArticle.caption %></i>

          <div class="float-right continue">
            <a href="/article/<%= featuredArticle.technicalName %>">Continue reading...</a>
          </div>
          <div class="clear"></div>
        </div>
        <!-- !Article caption -->
      </div>

      <div class="clear"></div>
    </div>
  </div>
  <% } %>
  <!-- !Featured article -->
</div>
<!-- !Articles -->

<!-- Bottom padding from footer -->
<div class="page-section-padding"></div>
<!-- !Bottom padding from footer -->
